<h3>Add a new post</h3>
<%= form_for(@post) do |form| %>
  <div class = "form-group">
    <%= form.label :author %>
    <%= form.text_field :author, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>
  <div class = "actions">
    <%= form.submit 'Create', class: 'btn btn-primary' %>
  </div>
<% end %>
